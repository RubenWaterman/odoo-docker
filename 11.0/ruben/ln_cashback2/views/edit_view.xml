<?xml  version="1.0"?>
<odoo>
    <record  id="view_form_edit_lnurl" model="ir.ui.view">
      <field name="name">Lnurl edit form</field>
      <field name="model">ln.cashback</field>
      <field name="arch" type="xml">
        <form string="Edit LNURL entries">
          <header>
            <button name="sat_amount" type="object" string="Calculate Sats" />
            <button name="fx_rate" type="object" string="Add FX rate" />
          </header>
          <sheet>
            <group>
              <field name="ln_url"/>
              <field name="satoshis"/>
              <field name="fiat_change"/>
              <field name="pos_statement_id"/>
              <field name="ln_status"/>
              <field name="exchange_rate"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
</odoo>
